<!-- ros2 launch dreadnought_urdf display.launch.py model:='/home/vivi/ws_moveit2/src/custom_robot/dreadnought.urdf'  -->
<robot name="dreadnought">

  <!-- Links section -->
  <link name="world"></link> 

  <link name="root_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>        
        <mesh filename="package://dreadnought_urdf/stl/binary/DreadnaughtV1Body-converted-binary.stl" scale="0.1 0.1 0.1"/>
      </geometry>
      <material name="Green">
        <color rgba="0.2 1 0.2 1"/>
      </material>
    </visual>
  </link>

  <link name="right_arm_link">
    <visual>
      <origin xyz="-0.8 -1.7 -2.3" rpy="0 0 0"/>
      <geometry>        
        <mesh filename="package://dreadnought_urdf/stl/binary/DreadnaughtV1RArm-converted-binary.stl" scale="0.1 0.1 0.1"/>
      </geometry>
      <material name="Blue">
        <color rgba="0.2 0.2 1 1"/>
      </material>
    </visual>
  </link>

  <link name="left_arm_link">
    <visual>
      <origin xyz="-2.83 -1.8 -2.3" rpy="0 0 0"/>
      <geometry>        
        <mesh filename="package://dreadnought_urdf/stl/binary/DreadnaughtV1larm-converted-binary.stl" scale="0.1 0.1 0.1"/>
      </geometry>
      <material name="Blue">
        <color rgba="0.1 0.2 1 1"/>
      </material>
    </visual>
  </link>

  <link name="base_link">
    <visual>
      <origin xyz="-1.75 -1.75 0" rpy="0 0 0"/>
      <geometry>        
        <mesh filename="package://dreadnought_urdf/stl/binary/DreadnoughtV1Legs-converted-binary.stl" scale="0.1 0.1 0.1"/>
      </geometry>
      <material name="Blue">
        <color rgba="0.2 0.2 1 1"/>
      </material>
    </visual>
  </link>

  <!-- Joints section -->
  <joint name="world_to_torso_joint" type="fixed">
    <parent link="world"/>
    <child link="root_link"/>
    <origin xyz="1 1 0"/>
  </joint>

  <joint name="torso_to_right_arm_joint" type="revolute">    
    <parent link="root_link"/>
    <child link="right_arm_link"/>
    <origin xyz="0.8 1.7 2.3"/>
    <limit effort="1000.0" lower="-1.5" upper="0.5" velocity="0.5"/>
  </joint>

  <joint name="torso_to_left_arm_joint" type="revolute">
    <parent link="root_link"/>
    <child link="left_arm_link"/>
    <origin xyz="2.8 1.7 2.3"/>
    <limit effort="1000.0" lower="-2.5" upper="0.5" velocity="0.5"/>
  </joint>

  <joint name="torso_to_legs_joint" type="revolute">
    <parent link="root_link"/>
    <child link="base_link"/>
    <origin xyz="1.75 1.75 0"/>
    <axis xyz="0 0 1"/>
    <limit effort="1000.0" lower="-1.5" upper="1.5" velocity="0.5"/>
  </joint>

</robot>